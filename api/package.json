{
    "name": "server-regzer",
    "author": {
        "name": "Caio Duarte",
        "email": "caiosduarte@gmail.com"
    },
    "description": "Regzer (Registration Analyzer)",
    "version": "1.0.0",
    "main": "server.js",
    "license": "MIT",
    "scripts": {
        "clean": "rimraf dist/",
        "copy-files": "copyfiles -e src/**/*.ts -as -u 1 src/**/*.* dist/",
        "typeorm:migrations": "ts-node-dev --transpile-only ./node_modules/typeorm/cli.js migration:run",
        "typeorm:cache": "ts-node-dev --transpile-only ./node_modules/typeorm/cli.js schema:sync",
        "build-w-tsc": "yarn clean && cross-env NODE_OPTIONS=--max-old-space-size=768 tsc && yarn copy-files",
        "build": "echo Deve ser com o babel, tsc com erro de mem√≥ria",
        "dev": "ts-node-dev --inspect --transpile-only --ignore-watch node_modules --respawn src/server.ts",
        "typeorm": "ts-node-dev --transpile-only ./node_modules/typeorm/cli.js",
        "seed": "ts-node-dev --transpile-only ./src/database/seed/base.ts"
    },
    "dependencies": {
        "aws": "^0.0.3-2",
        "aws-sdk": "^2.921.0",
        "bcrypt": "^5.0.1",
        "class-validator": "^0.13.1",
        "cors": "^2.8.5",
        "date-fns": "^2.21.3",
        "dayjs": "^1.10.5",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-errors": "^3.1.1",
        "handlebars": "^4.7.7",
        "jsonwebtoken": "^8.5.1",
        "mime": "^2.5.2",
        "multer": "^1.4.2",
        "nodemailer": "^6.6.1",
        "reflect-metadata": "^0.1.13",
        "sdk": "^0.5.0",
        "sqlite3": "^5.0.2",
        "typeorm": "^0.2.32",
        "utc": "^0.1.0",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@types/aws-sdk": "^2.7.0",
        "@types/bcrypt": "^5.0.0",
        "@types/cors": "^2.8.10",
        "@types/express": "^4.17.12",
        "@types/jsonwebtoken": "^8.5.1",
        "@types/mime": "^2.0.3",
        "@types/multer": "^1.4.5",
        "@types/nodemailer": "^6.4.2",
        "@types/sqlite3": "^3.1.7",
        "@types/uuid": "^8.3.0",
        "copy-files": "^0.1.0",
        "copyfiles": "^2.4.1",
        "cross-env": "^7.0.3",
        "rimraf": "^3.0.2",
        "ts-node-dev": "^1.1.6",
        "typescript": "^4.2.4"
    }
}
